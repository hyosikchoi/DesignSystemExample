<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.hyosik.android.designsystemex.Button
            android:id="@+id/btn_primary_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_size="medium"
            app:button_text="Hello"
            app:button_type="primary"
            app:button_left_icon="@drawable/ic_button_left_icon_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hyosik.android.designsystemex.Button
            android:id="@+id/btn_secondary_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:button_size="small"
            app:button_text="Hello"
            app:button_type="secondary"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_primary_small" />

        <com.hyosik.android.designsystemex.CheckBox
            android:id="@+id/cb_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:checkbox_size="large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_secondary_small"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>