<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Button">
        <attr name="button_type" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
        </attr>

        <attr name="button_size" format="enum">
            <enum name="small" value="0"/>
            <enum name="medium" value="1"/>
            <enum name="large" value="2"/>
        </attr>

        <attr name="button_text" format="string"/>
        <attr name="button_left_icon" format="reference"/>
        <attr name="button_right_icon" format="reference"/>

    </declare-styleable>

    <declare-styleable name="CheckBox">
        <attr name="checkbox_size" format="enum">
            <enum name="small" value="0"/>
            <enum name="medium" value="1"/>
            <enum name="large" value="2"/>
        </attr>
    </declare-styleable>

</resources>